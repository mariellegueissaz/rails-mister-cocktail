<div class="container">
  <div class="card cocktail" style="width:400px">
    <div class="card-img-top">
      <%= image_tag(@photo, height: 300, width: 400, :alt => "cocktail") %>

    </div>
    <div class="card-body">
      <h3 class="card-title"><%= @cocktail.name %></h3>
      <% @cocktail.doses.each do |dose| %>
        <div class="description">
          <p class="card-text"><%= dose.description %></p>
          <p class="card-text"><%= dose.ingredient.name%></p>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do  %>
          <i class="far fa-trash-alt"></i>
        <% end %>
        </div>
      <% end %>
        <%= link_to "Back to list", cocktails_path %>
        <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail)  %>
    </div>

  </div>
</div>
